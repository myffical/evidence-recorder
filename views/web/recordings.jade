doctype 5
html(lang=getLocale())
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Evidence Recorder - Recordings for #{number}
    link(href="/css/bootstrap.css", rel="stylesheet")
    link(href="/css/font-awesome.css", rel="stylesheet")
  body
    div(class="navbar navbar-default")
      div(class="container")
        div(class="navbar-header")
          a(class="navbar-brand" href="/?lang=" + getLocale())=__('Evidence Recorder')
        div(class="navbar-collapse collapse")
          ul(class="nav navbar-nav")
            li
              a(href="?lang=en&number=" + encodeURIComponent(number)) English
            li
              a(href="?lang=es&number=" + encodeURIComponent(number)) Espa√±ol

    div(class="container")
      div(class="row")
        div(class="col-md-12")
          h3=__('Recordings for %s', number)
          table(class="table")
            tr
              td=__('Number')
              td=__('Date')
              td=__('Duration')
              td=__('Audio')
              td=__('Download')
            - for (var i = 0; i < recordings.length; i++) {
            tr
              td=i + 1
              td=recordings[i].prettyDate(getLocale())
              td=recordings[i].duration
              td=Audio
              td
                a(href=recordings[i].url)
                  i(class="fa fa-download")
            - }

    footer
      div(class="container")
        p(class="text-muted credit") &copy; Yifan Mai 2013
    